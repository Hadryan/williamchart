<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- My Portfolio -->
    <style name="Theme.MyPortfolioTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="toolbarStyle">@style/Widget.MyPortfolio.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.MyPortfolio.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MyPortfolio.Button.OutlinedButton
        </item>
        <item name="materialCardViewStyle">@style/Widget.MyPortfolio.CardView</item>
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.MyPortfolio.SmallComponent
        </item>
    </style>

    <style name="Widget.MyPortfolio.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@null</item>
        <item name="titleTextColor">#fff</item>
    </style>

    <style name="Widget.MyPortfolio.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="backgroundTint">#331A39</item>
    </style>

    <style name="Widget.MyPortfolio.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="backgroundTint">@color/my_portfolio_outlined_btn</item>
        <item name="strokeColor">#64386B</item>
    </style>

    <style name="ShapeAppearance.MyPortfolio.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerRadius">@dimen/spacing_xxlarge</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Widget.MyPortfolio.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#FF9800</item>
    </style>
</resources>
